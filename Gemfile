  gem 'spring'
  gem 'thin'
  gem 'byebug'

  gem 'rspec-rails', '~> 3.0'
  gem 'guard-rspec', require: false
  gem 'factory_girl_rails'
  gem 'faker'
  gem 'shoulda-matchers'
end

group :production do
  gem 'rails_12factor'
  gem 'puma', '2.11.1'
end



